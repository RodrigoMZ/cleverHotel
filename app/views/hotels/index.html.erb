<style>
  #add_button {margin-top: 1em}
</style>

<div class="container">
  <div class="row">
    <div class="col s1 offset-s8" title="API">
      <a id="add_button" href="#" class="btn-floating btn-large waves-effect waves-light blue right disabled">API</a>
    </div>
    <div class="col s1" title="Feed">
      <a id="add_button" href="#" class="btn-floating btn-large waves-effect waves-light orange right disabled">
        <i class="material-icons">rss_feed</i>
      </a>
    </div>
    <div class="col s1" title="Excel">
      <a id="add_button" href="#modal" class="modal-trigger btn-floating btn-large waves-effect waves-light green right">
        <i class="material-icons">view_list</i>
      </a>

      <!-- The Modal -->
      <div id="modal" class="modal">
        <!-- Modal content -->
        <div class="modal-content">
          <%= form_tag import_hotels_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag "Import" %>
          <% end %>
        </div>
      </div>

    </div>
    <div class="col s1" title="Manual">
      <a id="add_button" href="/hotels/new" class="btn-floating btn-large waves-effect waves-light red right">
        <i class="material-icons">add</i>
      </a>
    </div>
</div>


<table class="striped  z-depth-1">
  <thead>
    <tr>
      <th data-field="id">Logo</th>
      <th data-field="name">Name</th>
      <th data-field="name">Address</th>
      <th data-field="name">City</th>
      <th data-field="name">Country</th>
      <th data-field="name">Area Type</th>
      <th data-field="name">Hotel Type</th>
      <th data-field="name">Delete Hotel</th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
    <tr id="hotel_<%= hotel.id %>">
      <td><%= image_tag hotel.images.first.logo_url(:thumb), class: "circle responsive-img" if hotel.images && hotel.images.first %></td>
      <td><%= hotel.name %></td>
      <td><%= hotel.address %></td>
      <td><%= hotel.city %></td>
      <td><%= hotel.country %></td>
      <td><%= hotel.area_type %></td>
      <td><%= hotel.hotel_type %></td>
      <td><%= link_to "Delete", hotel_path(hotel), method: :delete, remote: true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
<br>
<center>
  <div id="map" style='width: 90em; height: 25em;' class=" z-depth-2"></div>
</center>

<script type="text/javascript">
function initMap() {
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers([
      <% @hotels.each do |hotel| %>
        <% unless hotel.latitude.nil? && hotel.longitude.nil? %>
          {
            "lat": "<%= hotel.latitude %>",
            "lng": "<%= hotel.longitude %>",
            "infowindow": "<%= hotel.name %>"
          },
        <% end %>
      <% end %>
    ]);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  });
}

$(".modal-trigger").leanModal();
</script>
