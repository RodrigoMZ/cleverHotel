
<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> 
  <style>
    #add_button {margin-top: 1em}
  </style>
  <div class="container">
   <div class="row">
      <div class="col s6"><h2>Hotels</h2></div>
      <div class="col s6">
        <a id="add_button" href="/hotels/new" class="btn-floating btn-large waves-effect waves-light red right"><i class="material-icons">add</i></a>
      </div>
    </div>
    
   
    <table class="striped  z-depth-1">
      <thead>
        <tr>
          <th data-field="id">Logo</th>
          <th data-field="name">Name</th>
        </tr>
      </thead>

      <tbody>
        <% @hotels.each do |hotel| %>
        <tr>
          <td><%= hotel.id %></td>
          <td><%= hotel.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
  <br>
  <center>
      <div id="map" style='width: 90em; height: 25em;' class=" z-depth-2"></div>
  </center>
  
  <script type="text/javascript">
      
      handler = Gmaps.build('Google');
      handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
        markers = handler.addMarkers([
          {
            "lat": 40.431598,
            "lng": -3.702890,
            "infowindow": "hello!"
          },
          {
            "lat": 22.717004,
            "lng": 75.860122,
            "infowindow": "hello!"
          }
        ]);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
      });
    </script>





